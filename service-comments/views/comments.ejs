<!DOCTYPE html>
<html>
<head>
  <title>Commentaires</title>
  <!-- Ajout de Bootstrap CSS via CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Commentaire</h1>

    <!-- Afficher une image de Picsum -->
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://picsum.photos/id/237/200/300" alt="Image alÃ©atoire">
      <div class="card-body">
        <!-- Bouton qui ouvre le formulaire de commentaire -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#commentModal">
          Commenter
        </button>

        <!-- Modale de commentaire -->
        <div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Nouveau commentaire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="comment-form">
                  <div class="form-group">
                    <label for="text">Votre commentaire :</label>
                    <textarea class="form-control" id="text" name="text" required></textarea>
                  </div>
                  <input type="hidden" name="postId" value="6582330ccb06b3d31c02d910">
                  <input type="hidden" name="userId" value="6582338fcb06b3d31c02d458">
                  <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- base %>